<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperarContrasena"
    android:background="@drawable/fondo_pantallas_secundaria">

    <TextView
        android:id="@+id/restCon_tvolvidaste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/reg_edit_txt_perzonalizado"
        android:text="¿Olvidaste la contraseña?"
        android:textAlignment="center"
        android:textColor="#c36dc4"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restCon_tvIngresaCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/reg_edit_txt_perzonalizado"
        android:text="Ingresa el correo electronico \ncon el cual te registraste:"
        android:textAlignment="center"
        android:textColor="#1852a8"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restCon_tvolvidaste" />


    <EditText
        android:id="@+id/restCon_etCorreo"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/restcont_edit_txt_mod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restCon_tvIngresaCorreo"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/restCon_tvConfirmaCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/reg_edit_txt_perzonalizado"
        android:text="Confirma el Correo:"
        android:textAlignment="center"
        android:textColor="#1852a8"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restCon_etCorreo" />

    <EditText
        android:id="@+id/restCon_etConfCorreo"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/restcont_edit_txt_mod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restCon_tvConfirmaCorreo"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/restCon_btn_Solicita_Codigo"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7718C1"
        android:text="Solicitar Codigo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restCon_etConfCorreo" />


    <TextView
        android:id="@+id/restCon_tvVerificaCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/reg_edit_txt_perzonalizado"
        android:text="@string/revisaBandeja"
        android:textAlignment="center"
        android:textColor="#1852a8"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restCon_btn_Solicita_Codigo" />

    <EditText
        android:id="@+id/et_num1"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:background="#951167a8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restCon_tvVerificaCorreo"
        android:maxLength="1"
        android:textColor="@color/white"
        android:inputType="number"
        android:textSize="28dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/et_num2"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:background="#951167a8"
        app:layout_constraintStart_toEndOf="@+id/et_num1"
        app:layout_constraintTop_toBottomOf="@+id/restCon_tvVerificaCorreo"
        android:maxLength="1"
        android:textColor="@color/white"
        android:inputType="number"
        android:textSize="28dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/et_num3"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:background="#951167a8"
        app:layout_constraintStart_toEndOf="@+id/et_num2"
        app:layout_constraintTop_toBottomOf="@+id/restCon_tvVerificaCorreo"
        android:maxLength="1"
        android:textColor="@color/white"
        android:inputType="number"
        android:textSize="28dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/et_num4"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:background="#951167a8"
        app:layout_constraintStart_toEndOf="@+id/et_num3"
        app:layout_constraintTop_toBottomOf="@+id/restCon_tvVerificaCorreo"
        android:maxLength="1"
        android:textColor="@color/white"
        android:inputType="number"
        android:textSize="28dp"
        android:textAlignment="center"/>


    <Button
        android:id="@+id/restablecerContra"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:backgroundTint="#7718C1"
        android:text="@string/btn_restablecerContra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.929" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:backgroundTint="#7718C1"
        android:contentDescription="@string/btn_descriptionBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928"
        app:srcCompat="@android:drawable/ic_menu_revert" />


</androidx.constraintlayout.widget.ConstraintLayout>