<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categorias"
    android:background="@drawable/fondo_pantallas_principal">

    <ImageView
        android:id="@+id/cate_imgLogo1"
        android:layout_width="299dp"
        android:layout_height="69dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/imagencornercurv"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoecogarden1" />

    <TextView
        android:id="@+id/cate_imgLogo1_tx_categorias_imgLogo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Categorias"
        android:textColor="#934a2e"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cate_imgLogo1" />

    <Button
        android:id="@+id/cateAbono"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/btn_cateAbono"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cate_imgAbono" />

    <Button
        android:id="@+id/cateAgua"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/btn_cateAgua"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toEndOf="@+id/cateAbono"
        app:layout_constraintTop_toBottomOf="@+id/cate_imgAgua" />

    <Button
        android:id="@+id/cateEnergia"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/btn_cateEnergia"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cate_imgEnergia" />

    <Button
        android:id="@+id/cateCrecimiento"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/btn_cateCrecimiento"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toEndOf="@+id/cateEnergia"
        app:layout_constraintTop_toBottomOf="@+id/cate_imgCresimiento" />

    <Button
        android:id="@+id/cateEstadisticas"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/btn_estadisticas"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cate_imgEstadisticas" />

    <Button
        android:id="@+id/cateTips"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:text="Tips"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cate_imgTips" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:backgroundTint="#7718C1"
        android:contentDescription="@string/btn_descriptionBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageView
        android:id="@+id/cate_imgAbono"
        android:layout_width="110dp"
        android:layout_height="79dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/imagencornercurv"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cate_imgLogo1_tx_categorias_imgLogo1"
        app:srcCompat="@drawable/abono" />

    <ImageView
        android:id="@+id/cate_imgAgua"
        android:layout_width="110dp"
        android:layout_height="79dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/imagencornercurv"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toEndOf="@+id/cate_imgAbono"
        app:layout_constraintTop_toBottomOf="@+id/cate_imgLogo1_tx_categorias_imgLogo1"
        app:srcCompat="@drawable/agua" />

    <ImageView
        android:id="@+id/cate_imgEnergia"
        android:layout_width="110dp"
        android:layout_height="79dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/imagencornercurv"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cateAbono"
        app:srcCompat="@drawable/energia" />

    <ImageView
        android:id="@+id/cate_imgCresimiento"
        android:layout_width="110dp"
        android:layout_height="79dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/imagencornercurv"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toEndOf="@+id/cate_imgEnergia"
        app:layout_constraintTop_toBottomOf="@+id/cateAgua"
        app:srcCompat="@drawable/crecimiento" />

    <ImageView
        android:id="@+id/cate_imgEstadisticas"
        android:layout_width="110dp"
        android:layout_height="79dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/imagencornercurv"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cateEnergia"
        app:srcCompat="@drawable/estadisticas" />

    <ImageView
        android:id="@+id/cate_imgTips"
        android:layout_width="110dp"
        android:layout_height="79dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/imagencornercurv"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cateCrecimiento"
        app:srcCompat="@drawable/tips" />


</androidx.constraintlayout.widget.ConstraintLayout>