<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recuperar2Contrasena"
    android:background="@drawable/fondo_pantallas_secundaria">

    <TextView
        android:id="@+id/restCon_tvReestablece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:background="@drawable/reg_edit_txt_perzonalizado"
        android:text="Reestablece tu contraseña"
        android:textAlignment="center"
        android:textColor="#c36dc4"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restCon_tvingresaNuevaContrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/reg_edit_txt_perzonalizado"
        android:text="Ingresa Una Nueva \nContraseña:"
        android:textAlignment="center"
        android:textColor="#1852a8"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restCon_tvReestablece" />

    <EditText
        android:id="@+id/restCon_etNuevaContrasena"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/restcont_edit_txt_mod"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restCon_tvingresaNuevaContrase" />

    <TextView
        android:id="@+id/restCon_tvConfirmaNuevaContrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/reg_edit_txt_perzonalizado"
        android:text="Confirma tu nueva \nContraseña:"
        android:textAlignment="center"
        android:textColor="#1852a8"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restCon_etNuevaContrasena" />

    <EditText
        android:id="@+id/restCon_etConfirmaNuevaContrasena"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/restcont_edit_txt_mod"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restCon_tvConfirmaNuevaContrase" />

    <Button
        android:id="@+id/nuevaContrasena"
        android:layout_width="157dp"
        android:layout_height="49dp"
        android:backgroundTint="#7718C1"
        android:text="@string/btn_nuevaContrasena"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:backgroundTint="#7718C1"
        android:contentDescription="@string/btn_descriptionBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuevaContrasena"
        app:srcCompat="@drawable/logo1_ecogarden_mod" />


</androidx.constraintlayout.widget.ConstraintLayout>